<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-autowire="byName">
    
	<bean name="propertiesConfiger" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:init.properties</value>
			</list>
		</property>
	</bean>
    
    <bean id="appContext" class="mblog.context.AppContext">
    	<property name="root" value="/data/mblog"/>
    </bean>
    
    <bean id="jsonUtils" class="mblog.web.formatter.JsonUtils" />
    
    <bean id="startupListener" class="mblog.web.listener.StartupListener" />
    
    <!-- 文件绝对路径存储 -->
    <!-- 
    <bean id="fileRepository" class="mblog.web.upload.impl.FileRealPathRepository" />
    -->
    
    <!-- 文件相对项目根路径存储 -->
    <bean id="fileRepository" class="mblog.web.upload.impl.FileRepository" />
    
</beans>
