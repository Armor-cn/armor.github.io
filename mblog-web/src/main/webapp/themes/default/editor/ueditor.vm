
<link href="$base/assets/vendors/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet" />

<textarea id="content" class="form-control" name="content" rows="5" data-required data-describedby="message" data-description="content"></textarea>

<script type="text/javascript">
function setContent(content) {
	if (content != null && content.length > 0) {
    	if (mblog.browser.ios || mblog.browser.android) {
    		$('#content').text(content);
    	} else {
    		UM.getEditor('content').setContent(content);
    	}
	}
}

$(function () {
	if (!mblog.browser.ios && !mblog.browser.android) {
		seajs.use('editor');
	}
})


</script>
