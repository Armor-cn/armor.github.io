#set($title = "视频分享")

<div class="col-xs-12 col-md-12">
	<ul class="videos clearfix">
		#foreach($row in $page.results)
			<li class="col-xs-12 col-sm-4 col-lg-3">
				<div class="item">
					#foreach($alb in ${row.albums})
						#if ($velocityCount == 1)
							<div class="item-img">
								<img src="$base/assets/images/spinner.gif" data-original="$base${alb.preview}"/>
								<span class="itag"><i class="fa fa-play-circle"></i></span>
							</div>
						#end
					#end
					<div class="txt">
						#postLink($row)
					</div>
				</div>
			</li>
		#end
	</ul>
	<div class="text-center clr">
		#set($url = "$!{group.key}?ord=" + ${ord})
    	#page($url $page 5)
    </div>
</div>
