#set($title = "发现")

<div class="col-xs-12 col-md-12">
	<ul class="tags_grid tags_effecs clearfix">
	#foreach($row in $tags)
		<li class="col-xs-6 col-sm-4 col-lg-3">
			<figure>
				<a href="$base/tag/${row.name}">
					#if($!{row.post.album})
						#if($!row.post.album.preview.startsWith("http"))
							<img src="$base/assets/images/spinner.gif" data-original="${row.post.album.preview}"/>
						#else
							<img src="$base/assets/images/spinner.gif" data-original="$base${row.post.album.preview}"/>
						#end
					#else
						<div class="txt">$!{row.post.summary}</div>
					#end
					<span class="itag">${row.name}</span>
				</a>
				<figcaption>
					<h3><i class="fa fa-tag"></i> ${row.name}</h3>
					<span>$!{row.post.title}</span>
				</figcaption>
			</figure>
		</li>
	#end
	</ul>
</div>